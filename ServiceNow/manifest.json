
{
  "manifest_version": 3,
  "name": "ServiceNow Demand Task Helper",
  "description": "Assist in updating Demand tasks",
  "version": "1.0.0",
  "author": "Alec Maly",
  "content_scripts": [
    {
      "matches": ["*://dteenergyprod.service-now.com/*"],
      "js": ["inject.js"],
      "run_at": "document_end" 
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["payload.js"],
      "matches": ["*://dteenergyprod.service-now.com/*"]
    }
  ],
  "homepage_url": "https://dteenergyprod.service-now.com/",
  "permissions": [
    "activeTab"
  ]
}
